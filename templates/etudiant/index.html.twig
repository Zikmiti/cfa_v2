{% extends 'base.html.twig' %}

{% block title %}Étudiants
{% endblock %}

{% block body %}
	<h1>Étudiants</h1>
	<button id="ajouter" data-target="#formModal" data-toggle="modal" class="btn btn-success" onclick="OpenModal('{{ path('etudiant_new') }}')">
		<i class="fas fa-plus"></i>
	</button>

	<table class="table custom-table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Telephone</th>
				<th>Email</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for etudiant in etudiants %}
				<tr>
					<td>{{ etudiant.nom }}</td>
					<td>{{ etudiant.prenom }}</td>
					<td>{{ etudiant.telephone }}</td>
					<td>{{ etudiant.email }}</td>
					<td>
						<button data-target="#formModal" data-toggle="modal" class="btn btn-primary " onclick="OpenModal('{{path('etudiant_edit', {'id': etudiant.id})}}')">Modifier</button>
						{{ include('etudiant/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="35">aucune données</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="navigation">
		{{ knp_pagination_render(etudiants) }}
	</div>

{% endblock %}
