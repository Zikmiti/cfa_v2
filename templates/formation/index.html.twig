{% extends 'base.html.twig' %}

{% block title %}Formations
{% endblock %}

{% block body %}
	<h1>Formations</h1>
	<button id="ajouter" data-target="#formModal" data-toggle="modal" class="btn btn-success" onclick="OpenModal('{{ path('formation_new') }}')">
		<i class="fas fa-plus"></i>
	</button>

	<table class="table custom-table">
		<thead>
			<tr>
				<th>Libelle</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for formation in formations %}
				<tr>
					<td>{{ formation.libelle }}</td>
					<td>
						<button data-target="#formModal" data-toggle="modal" class="btn btn-primary " onclick="OpenModal('{{path('formation_edit', {'id': formation.id})}}')">Modifier</button>
						{{ include('formation/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="35">aucune donn√©es</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="navigation">
		{# {{ knp_pagination_render(formation) }} #}
	</div>

{% endblock %}
